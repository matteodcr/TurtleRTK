<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#6A3DE7">
    <ImageView android:id="@+id/im" android:layout_width="72dp" android:layout_height="72dp" android:src="@drawable/splash_screen" android:scaleType="fitCenter" android:layout_centerInParent="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turtle RTK"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:layout_below="@id/im"
            android:layout_centerInParent="true"/>
</RelativeLayout>
